<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Booking Tests" parallel="tests" thread-count="5">

    <parameter name="browser" value="CHROME"/>
    <parameter name="env" value="QA"/>
    <parameter name="wait" value="10"/>
    <parameter name="screenshot" value="Yes"/>
    <parameter name="quit" value="Yes"/>

    <test enabled="false" name="Booking Stays Tests">
        <classes>
            <class name="runners.booking.StaysTestRunner"/>
        </classes>
    </test>
    <test name="Booking Flights Tests">
        <classes>
            <class name="runners.booking.FlightsTestRunner"/>
        </classes>
    </test>

</suite>